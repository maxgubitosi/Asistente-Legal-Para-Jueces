# =================================
# AZURE OPENAI CONFIGURATION
# =================================
AZURE_API_KEY=x
AZURE_ENDPOINT=x
AZURE_DEPLOYMENT=x

# =================================
# INFRASTRUCTURE
# =================================
QDRANT_URL=http://qdrant:6333
BM25_PATH=/indexes/bm25.pkl
BM25_CORPUS_PATH=/indexes/bm25_corpus.npy

# =================================
# FACTORY STRATEGIES
# =================================
PROCESSING_MODE=standard              # standard | parallel | streaming
SEARCH_STRATEGY=hybrid               # hybrid | dense_only | lexical_only
LLM_PROVIDER=azure                   # azure | openai | local
RAG_STRATEGY=standard                # standard | conversational | multi_step

# =================================
# DATA PROCESSING
# =================================
MAX_PARAGRAPH_LENGTH=250             # Reducido para procesamiento más rápido
PROCESSING_BATCH_SIZE=1000
EMBEDDING_BATCH_SIZE=32              # Reducido para menos memoria
UPLOAD_BATCH_SIZE=500

# =================================
# SEARCH CONFIGURATION
# =================================
DENSE_SEARCH_LIMIT=12                # Límite búsqueda vectorial (reducido para velocidad)
LEXICAL_SEARCH_LIMIT=12              # Límite búsqueda BM25 (reducido para velocidad)
ENABLE_RERANKING=true                # CrossEncoder reranking
ENABLE_QUERY_CACHING=true            # Cache de embeddings

# =================================
# LLM CONFIGURATION
# =================================
LLM_MAX_TOKENS=250                   # Reducido para respuestas más rápidas
LLM_TEMPERATURE=0.1                  # Mantener consistencia
LLM_TIMEOUT=20                       # Timeout más agresivo
LLM_MAX_RETRIES=2                    # Menos reintentos para fallas rápidas

# =================================
# RAG CONFIGURATION
# =================================
MAX_RESULTS_PER_QUERY=8
RAG_ENABLE_STREAMING=false

# =================================
# PERFORMANCE & SYSTEM
# =================================
MAX_MEMORY_USAGE_PERCENT=80
ENABLE_TEXT_PREPROCESSING=true

# =================================
# PERFORMANCE OPTIMIZATION
# =================================
QUERY_TIMEOUT=45                     # Timeout total por query (segundos)
ENABLE_FAST_MODE=true                # Modo rápido para demos
SKIP_SLOW_RERANKING=false            # Saltar reranking en queries complejas
CACHE_SIZE_LIMIT=200                 # Límite de cache de embeddings

# =================================
# FACTORY MANAGER
# =================================
FACTORY_LOG_LEVEL=INFO               # DEBUG | INFO | WARNING
FACTORY_LAZY_LOADING=true
FACTORY_CACHE_INSTANCES=true